# ============================================================
# Infinity OS — Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
#
# ISO 27001: A.9.4.3 Password management
# ============================================================

# ============================================================
# DOMAIN CONFIGURATION
# ============================================================
DOMAIN=your-domain.com

# ============================================================
# SUPABASE (Free tier: https://supabase.com)
# ============================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# ============================================================
# CLOUDFLARE (Free tier: https://cloudflare.com)
# ============================================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_TUNNEL_ID=your-tunnel-id
CLOUDFLARE_DNS_TOKEN=your-dns-api-token

# ============================================================
# JWT SECRETS
# Generate with: openssl rand -base64 64
# ============================================================
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_CHAR_RANDOM_STRING

# ============================================================
# HASHICORP VAULT
# Generate root token with: openssl rand -base64 32
# ============================================================
VAULT_ROOT_TOKEN=REPLACE_WITH_VAULT_ROOT_TOKEN
VAULT_ADDR=http://localhost:8200
VAULT_PROMETHEUS_TOKEN=REPLACE_WITH_PROMETHEUS_TOKEN

# ============================================================
# MONITORING
# ============================================================
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# ============================================================
# LANGFUSE (AI Observability)
# Generate secrets with: openssl rand -base64 32
# ============================================================
LANGFUSE_DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
LANGFUSE_NEXTAUTH_SECRET=REPLACE_WITH_32_CHAR_RANDOM_STRING
LANGFUSE_SALT=REPLACE_WITH_32_CHAR_RANDOM_STRING

# ============================================================
# EMAIL (Resend - Free tier: https://resend.com)
# ============================================================
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@your-domain.com

# ============================================================
# VITE (Frontend build variables — public, safe to expose)
# ============================================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_IDENTITY_WORKER_URL=https://identity.your-domain.com
VITE_FILESYSTEM_WORKER_URL=https://filesystem.your-domain.com
VITE_REGISTRY_WORKER_URL=https://registry.your-domain.com
VITE_SEARCH_WORKER_URL=https://search.your-domain.com
VITE_AI_WORKER_URL=https://ai.your-domain.com
VITE_APP_NAME=Infinity OS
VITE_APP_VERSION=0.1.0
VITE_WEBAUTHN_RP_ID=your-domain.com
VITE_WEBAUTHN_RP_NAME=Infinity OS

# ============================================================
# ALLOWED ORIGINS (comma-separated)
# ============================================================
ALLOWED_ORIGINS=https://your-domain.com,https://infinity-os.pages.dev

# ============================================================
# FEATURE FLAGS
# ============================================================
VITE_FEATURE_AI_ENABLED=true
VITE_FEATURE_WEBAUTHN_ENABLED=true
VITE_FEATURE_IPFS_ENABLED=false
VITE_FEATURE_DAO_ENABLED=false